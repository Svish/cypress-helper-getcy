{
  "name": "cypress-helper-getcy",
  "version": "1.1.0",
  "description": "Simple Cypress command for getting elements via `data-cy` attributes",
  "keywords": [
    "cypress",
    "helper"
  ],
  "license": "MIT",
  "scripts": {
    "prepare": "tsc",
    "watch": "tsc --watch --preserveWatchOutput",
    "start": "run-p --silent --race watch cypress:open",
    "test": "run-s --silent --print-name prepare lint:* cypress:run",
    "cypress:open": "cypress open --project test",
    "cypress:run": "cypress run --project test",
    "lint:ts": "tsc --noEmit",
    "lint:prettier": "prettier --ignore-path .gitignore --check \"**/*\"",
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "tagName": "v%s",
      "commitArgs": "--gpg-sign",
      "tagArgs": "--sign"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:init": [
        "npm test"
      ]
    }
  },
  "author": "Torleif Berger <torleif@outlook.com> (https://www.geekality.net)",
  "repository": {
    "type": "git",
    "url": "https://github.com/svish/cypress-helper-getcy"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "cypress": ">=0.20.0"
  },
  "devDependencies": {
    "cypress": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "release-it": "^12.3.2",
    "typescript": "^3.5.2"
  }
}
